{
  "name": "layaair-build",
  "version": "1.0.0",
  "description": "build LayaAir project to H5 game or WeChat game or Facebook game project.",
  "author": "liangmayong",
  "license": "ISC",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode=production",
    "export-fb": "node ./bin/build.js --platform facebook --input ./test/bin/ --output ./build/ --min",
    "export-h5": "node ./bin/build.js --output ./build/ --min --x",
    "export-wx": "node ./bin/build.js --platform wechat --input ./test/bin/ --output ./build/ --min --env prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whoopschat/layaair-build.git"
  },
  "engines": {
    "node": ">= 0.10"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "layaair-build": "./bin/build.js"
  },
  "dependencies": {
    "cheerio": "*",
    "del": "*",
    "gulp": ">=4.0.0",
    "gulp-zip": "*",
    "gulp-cheerio": "*",
    "gulp-concat": "*",
    "gulp-downloader": "*",
    "gulp-pngquant": "*",
    "gulp-uglify": "*",
    "gulp-replace": "*",
    "minimist": "*",
    "through2": "*"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "string-replace-loader": "^2.1.1",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  },
  "keywords": [
    "layaair",
    "layaair-export"
  ]
}